{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist/server",
        "strict": true,
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "./server/src/**/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "./client",
    ]
}