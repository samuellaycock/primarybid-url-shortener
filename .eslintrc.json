{
    "root": true,
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "@typescript-eslint/parser",
    },
    "extends": [
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:vue/base"
    ],
    "plugins": [
        "@typescript-eslint",
        "vue"
    ],
    "rules": {
        "vue/script-indent": [
            "error",
            4,
            {
                "baseIndent": 1
            }
        ],
        "indent": [
            "error",
            4
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    }
}